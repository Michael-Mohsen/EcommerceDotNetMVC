@using Ecommerce1.Models;
@model List<Product>

<h2>Cart</h2>
@*
@if (Model != null && Model.Count > 0)
{
    <table>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th></th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <form method="post" action="@Url.Action("RemoveFromCart", "Products")">
                        <input type="hidden" asp-action="RemoveFromCart" asp-controller="Products" asp-route-id="@product.ProductId" />
                        <button type="submit">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </table>

    <form method="post" action="@Url.Action("Checkout", "Cart")">
        <button type="submit">Checkout</button>
    </form>
}
else
{
    <p>Your cart is empty.</p>
}*@